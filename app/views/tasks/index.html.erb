<h1>Your todo list</h1>
<div>
  <div>
    <h2>
      Add a new todo
    </h2>

    <form action="/insert_task" method="post">
      <div>
        <label for="content_box">
          Describe the task:
        </label>

        <input type="text" id="content_box" name="query_task">
      </div>

      <button>
        Add to Next Up
      </button>
    </form>
  </div>
</div>

<div class="next_up">
<h2>Next Up</h2>
<% @list_of_tasks.each do |task| %>

<% if task == "Next Up"%>
<ul>
  <li>
    <div><%= task.task %></div>
    <small>About <%= time_ago_in_words(task.created_at) %> ago <a href="/delete_task/<%= task.id %>">Delete</a></small>

    <form action="/modify_task/<%= task.id %>" method = "post"><input type="hidden" name="query_status" value="in_progress"><button>Move to In Progress</button></form>
  </li>
</ul>
<% end %>
</div>

<div class="in_progress">
  <h2>In Progress</h2>

  <ul>
    <li>
    <div>
      <%#= %>
    </div>
    <small>
      Started <%= time_ago_in_words(task.created_at) %> ago
      <a href="/delete_task/<%= task.id %>">Delete</a>
    </small>
    <form action="/modify_task/<%= task.id %>" method="post">
    <input type="hidden" name="query_status" value="done">
    </form>
    </li>
  </ul>
</div>
<% end %>
